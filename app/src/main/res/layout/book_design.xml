<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="5dp"
        app:cardCornerRadius="3dp">

        <LinearLayout
            android:layout_width="@dimen/favourite_card_view_width"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/iv_book_photo"
                android:layout_width="@dimen/favourite_card_view_width"
                android:layout_height="@dimen/favourite_card_view_height"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_book_name"
                android:layout_width="@dimen/favourite_card_view_width"
                android:layout_height="26dp"
                android:layout_margin="@dimen/fragment_title_margin_extra_small"
                android:text="Book name"
                android:textColor="#000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_author"
                android:layout_width="@dimen/favourite_card_view_width"
                android:layout_height="wrap_content"
                android:text="Author name"
                android:layout_marginStart="@dimen/fragment_title_margin_extra_small"
                android:layout_marginBottom="@dimen/fragment_title_margin_extra_small"
                android:layout_marginLeft="@dimen/fragment_title_margin_extra_small"/>





        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>