<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="5dp"
        app:cardCornerRadius="3dp">

        <LinearLayout
            android:layout_width="@dimen/favourite_card_view_height"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_category_icon"
                android:layout_width="@dimen/category_card_view_image_width"
                android:layout_height="@dimen/category_card_view_image_height"
                android:layout_margin="@dimen/fragment_title_margin_small"
                android:layout_gravity="center"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/tv_category_name"
                android:layout_width="@dimen/favourite_card_view_width"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fragment_title_margin_extra_small"
                android:text="Book name"
                android:textColor="@color/colorAccent"
                android:textSize="16dp"
                android:textAlignment="center"
                android:layout_gravity="center"/>




        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>